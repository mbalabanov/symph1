{% extends 'base.html.twig' %}

{% block title %}Add{% endblock %}

{% block body %}

<div class="row my-5">
    <div class="col-md-8">
        <h2 class="text-secondary">Add a Journey</h2>
        <a href="/" class="btn btn-secondary my-2">Back to Destinations</a>
        <form>
            <div class="form-group">
                <label for="destinationfield">Destination Name</label>
                <input type="text" class="form-control" id="destinationfield" placeholder="Destination...">
            </div>
            <div class="form-group">
                <label for="imagepathfield">Image URL</label>
                <input type="text" class="form-control" id="imagepathfield" placeholder="Image URL...">
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Description</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="pricefield">Price</label>
                <input type="number" class="form-control" id="pricefield" placeholder="0">
            </div>
            <input type="submit" value="Add Journey" class="btn btn-primary my-2">
        </form>
    </div>
    {{ include('sidebar.html') }}
</div>
{% endblock %}
